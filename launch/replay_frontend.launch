<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="robot" default="acl_jackal" />
    <arg name="camera" default="forward" />
    <arg name="sequence" default="1207" />
    <arg name="datadir" default="$(find kmd_tools)/datadir" /> <!-- Optional, but required for ground truth -->
    <arg name="logdir" default="$(find kmd_tools)/logdir" /> <!-- Optional, but required for keyframe timing -->

    <rosparam command="load" file="$(find kmd_tools)/params/robot_names.yaml" />

    <group ns="$(arg robot)">
        <node pkg="kmd_tools" type="broadcast_static_tfs.py" name="broadcast_static_tfs">
            <param name="robot" value="$(arg robot)" />
            <param name="camera" value="$(arg camera)" />
        </node>
    </group>

    <include file="$(find kmd_tools)/launch/odometry_generator.launch" pass_all_args="true" />
    <include file="$(find kmd_tools)/launch/pose_graph_generator.launch" pass_all_args="true" />
    <include file="$(find kmd_tools)/launch/repub_images.launch" pass_all_args="true" />
</launch>
